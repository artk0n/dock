<UserControl x:Class="DockTop.Controls.SettingsFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="root" Width="380" Background="#0F0F12" Height="Auto">
    <Border CornerRadius="16" Background="#E61A1A1C" Padding="14">
        <Border.Effect><DropShadowEffect BlurRadius="24" ShadowDepth="0" Opacity="0.35"/></Border.Effect>
        <StackPanel>
            <TextBlock Text="Dock Settings" FontWeight="Bold" Margin="0,0,0,8" />
            <Separator Margin="0,0,0,8"/>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Icon size" Width="120" VerticalAlignment="Center"/>
                <Slider x:Name="IconSizeSlider" Minimum="48" Maximum="96" Value="64" Width="200" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding ElementName=IconSizeSlider, Path=Value, StringFormat={}{0} px}" Margin="8,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="Dock opacity" Width="120" VerticalAlignment="Center"/>
                <Slider x:Name="OpacitySlider" Minimum="0.4" Maximum="1.0" Value="0.75" Width="200" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding ElementName=OpacitySlider, Path=Value, StringFormat={}{0:F2}}" Margin="8,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="Animation speed" Width="120" VerticalAlignment="Center"/>
                <Slider x:Name="AnimSlider" Minimum="120" Maximum="600" Value="240" Width="200" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding ElementName=AnimSlider, Path=Value, StringFormat={}{0} ms}" Margin="8,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="Auto-hide delay" Width="120" VerticalAlignment="Center"/>
                <Slider x:Name="HideDelaySlider" Minimum="0" Maximum="2000" Value="450" Width="200" Margin="8,0,0,0"/>
                <TextBlock Text="{Binding ElementName=HideDelaySlider, Path=Value, StringFormat={}{0} ms}" Margin="8,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" >
                <CheckBox x:Name="FullWidthCheck" Content="Full width" Margin="0,0,16,0"/>
                <CheckBox x:Name="TodCheck" Content="Time-of-day theme" IsChecked="True"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                <TextBlock Text="Theme preset" Width="120" VerticalAlignment="Center"/>
                <ComboBox x:Name="ThemeCombo" Width="220"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button x:Name="ExportThemesBtn" Content="Export" Width="80" Margin="0,0,8,0"/>
                <Button x:Name="ImportThemesBtn" Content="Import" Width="80" Margin="0,0,8,0"/>
                <Button x:Name="ApplyBtn" Content="Apply" Width="80" Margin="0,0,8,0"/>
                <Button x:Name="CloseBtn" Content="Close" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
