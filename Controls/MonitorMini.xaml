<UserControl x:Class="DockTop.Controls.MonitorMini"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="220" Height="50">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Margin="6,0" Width="70">
                <TextBlock Text="CPU" FontSize="11" Opacity="0.8"/>
                <ProgressBar x:Name="Cpu" Height="8" Minimum="0" Maximum="100"/>
            </StackPanel>
            <StackPanel Margin="6,0" Width="70">
                <TextBlock Text="RAM" FontSize="11" Opacity="0.8"/>
                <ProgressBar x:Name="Ram" Height="8" Minimum="0" Maximum="100"/>
            </StackPanel>
            <StackPanel Margin="6,0" Width="80">
                <TextBlock Text="NET (KB/s)" FontSize="11" Opacity="0.8"/>
                <TextBlock x:Name="Net" FontSize="12"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
