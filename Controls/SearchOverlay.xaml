<Window x:Class="DockTop.Controls.SearchOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="#C0101010"
        Width="640" Height="80" Topmost="True" ShowInTaskbar="False">
  <Border CornerRadius="12" Background="#F0151518" Padding="12">
    <Grid>
      <TextBox x:Name="Box"
               FontSize="20" Margin="4"
               VerticalContentAlignment="Center"
               KeyDown="Box_KeyDown"/>
      <!-- Watermark -->
      <TextBlock IsHitTestVisible="False"
                 Margin="12,0,0,0"
                 VerticalAlignment="Center"
                 Foreground="#66FFFFFF">
        <TextBlock.Text>Type to search apps or web...</TextBlock.Text>
        <TextBlock.Style>
          <Style TargetType="TextBlock">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
              <DataTrigger Binding="{Binding Text, ElementName=Box}" Value="">
                <Setter Property="Visibility" Value="Visible"/>
              </DataTrigger>
            </Style.Triggers>
          </Style>
        </TextBlock.Style>
      </TextBlock>
    </Grid>
  </Border>
</Window>
