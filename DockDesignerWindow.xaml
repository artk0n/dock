<Window x:Class="DockTop.DockDesignerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dock Designer" Width="980" Height="680"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip"
        AllowDrop="True" >
    <Grid>
        <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="*"/><RowDefinition Height="Auto"/></Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="12">
            <TextBlock Text="Dock Designer" FontWeight="SemiBold" FontSize="18" />
            <Button x:Name="AddTabBtn" Content="+ Tab" Margin="12,0,0,0" />
        </StackPanel>

        <TabControl Grid.Row="1" Margin="12">
            <TabItem Header="Items">
                <Grid>
                    <Grid.ColumnDefinitions><ColumnDefinition Width="3*"/><ColumnDefinition Width="6"/><ColumnDefinition Width="2*"/></Grid.ColumnDefinitions>
                    <DockPanel Grid.Column="0">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <Button x:Name="AddBlankBtn" Content="Add" Width="80" Margin="0,0,6,0"/>
                            <Button x:Name="RemoveBtn" Content="Remove" Width="80" Margin="0,0,6,0"/>
                            <Button x:Name="UpBtn" Content="Up" Width="60" Margin="0,0,6,0"/>
                            <Button x:Name="DownBtn" Content="Down" Width="60" Margin="0,0,6,0"/>
                            <Button x:Name="ImportBtn" Content="Import JSON" Width="110" Margin="6,0,0,0"/>
                            <Button x:Name="ExportBtn" Content="Export JSON" Width="110" Margin="6,0,0,0"/>
                            <Button x:Name="BrowseBtn" Content="Browseâ€¦" Width="100" Margin="6,0,0,0"/>
                        </StackPanel>
                        <ListView x:Name="ItemsList" ItemsSource="{Binding Items}" SelectedItem="{Binding Selected, Mode=TwoWay}" Margin="0,6,0,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Title" Width="160" DisplayMemberBinding="{Binding Title}"/>
                                    <GridViewColumn Header="Group" Width="90" DisplayMemberBinding="{Binding Group}"/>
                                    <GridViewColumn Header="Path" Width="260" DisplayMemberBinding="{Binding Path}"/>
                                    <GridViewColumn Header="Icon" Width="160" DisplayMemberBinding="{Binding IconOverride}"/>
                                    <GridViewColumn Header="Accent" Width="90" DisplayMemberBinding="{Binding Accent}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </DockPanel>
                    <Grid Grid.Column="1"><GridSplitter HorizontalAlignment="Center" Width="6"/></Grid>
                    <DockPanel Grid.Column="2">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="Start Menu apps" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <Button x:Name="RefreshAppsBtn" Content="Refresh" Width="90"/>
                        </StackPanel>
                        <ListBox x:Name="AppsList" />
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,6,0,0">
                            <Button x:Name="AddSelectedAppBtn" Content="Add Selected" Width="120"/>
                        </StackPanel>
                    </DockPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Appearance">
                <StackPanel Margin="8">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Theme:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <ComboBox x:Name="ThemeCombo" Width="220"/>
                        <Button x:Name="ApplyThemeBtn" Content="Apply" Width="80" Margin="8,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="Tile style: Matte pressed-in (preview)" Margin="0,8,0,6"/>
                    <Border CornerRadius="10" Background="#1AFFFFFF" Padding="8">
                        <Border.Effect><DropShadowEffect ShadowDepth="0" BlurRadius="12"/></Border.Effect>
                        <StackPanel Orientation="Horizontal" >
                            <Rectangle Width="48" Height="48" Fill="{DynamicResource AccentBrush}" RadiusX="10" RadiusY="10"/>
                            <TextBlock Text="  Pressed-in tile" VerticalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </TabItem>
            <TabItem Header="Behavior">
                <StackPanel Margin="8">
                    <CheckBox x:Name="AutoHideCheck" Content="Enable auto-hide" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <TextBlock Text="Auto-hide delay (ms)" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider x:Name="AutoHideDelaySlider" Minimum="0" Maximum="5000" TickFrequency="100" Width="240"/>
                    </StackPanel>
                    <CheckBox x:Name="TopmostCheck" Content="Always on top" />
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,12,12">
            <Button x:Name="ApplyBtn" Content="Apply" Width="110" Margin="0,0,8,0"/>
            <Button x:Name="SaveBtn" Content="Save" Width="110" Margin="0,0,8,0"/>
            <Button Content="Close" Width="100" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
